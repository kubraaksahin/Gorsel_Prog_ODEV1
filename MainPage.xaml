<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             Title="Hesap Makinesi" >

    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label
            Text="Lütfen Mod Seçiniz."
            FontAttributes="Bold"
            HorizontalOptions="Center"
            FontSize="18" />

        <Button
            x:Name="StandardButton"
            Text="Standart Hesap Makinesi"
            WidthRequest="260"
            HeightRequest="60"
            CornerRadius="8"
            BackgroundColor="#2196F3"
            TextColor="White"
            Clicked="OnStandardClicked" />

        <Button
             x:Name="ScientificButton"
             Text="Bilimsel Hesap Makinesi"
             WidthRequest="260"
             HeightRequest="60"
             CornerRadius="8"
             BackgroundColor="#9C27B0"
             TextColor="White"
             Clicked="OnScientificClicked" />



    </VerticalStackLayout>

</ContentPage>  